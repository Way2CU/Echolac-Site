<document>
  <cms:desktop>
    <img 
      src="gallery::getThumbnailById($params['id'], null, 150,Thumbnail::CONSTRAIN_BOTH)"
      alt="$params['title'][$language]"
      data-id="$params['id']" 
      cms:eval="src,alt,data-id"
      />
  </cms:desktop>

  <cms:mobile>
    <img 
      src="gallery::getThumbnailById($params['id'], null, 100,Thumbnail::CONSTRAIN_BOTH)"
      alt="$params['title'][$language]"
      data-id="$params['id']" 
      cms:eval="src,alt,data-id"
      />
  </cms:mobile>
</document>