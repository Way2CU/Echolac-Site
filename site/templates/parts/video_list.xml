<document>
  <cms:desktop>
    <div class="video_wrap">
      <h4><cms:var param="title" multilanguage="yes"/></h4>
      <cms:module
        name="youtube"
        action="show"
        id="$params['id']"
        embed="1"
        width="380"
        height="252"
        enable_api="1"
        cms:eval="id"
      />  
    </div>
  </cms:desktop>

  <cms:mobile>
    <a
      href="'http://www.youtube.com/watch?v='.$params['video_id']"
      title="$params['title'][$language]"
      cms:eval="href,title"
      >
      <img
        src="$params['thumbnail']"
        alt="$params['title'][$language]"
        cms:eval="src,alt"
      />
    </a>
  </cms:mobile>
</document>